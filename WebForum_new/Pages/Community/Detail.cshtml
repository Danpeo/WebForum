        </div>
        @if (Model.Community?.Posts != null)
        {
            <p>
                @foreach (Post item in Model.Community.Posts)
                {
                    @item.Title
                }
            </p>
        }
        else
        {
            <p>No Post found.</p>
        }
    </div>

    <div class="button-main">
        <a asp-page="/Community/Delete" asp-route-id="@Model.Community?.Id" class="link-light">
            <button class="btn btn-danger">
                Permanent Delete
            </button>
        </a>
        <a asp-page="/Community/Delete" asp-route-id="@Model.Community?.Id" class="link-light">
