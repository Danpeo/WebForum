@model WebForum_new.Pagination.PaginationInfo

<nav aria-label="Page navigation">
    <ul class="pagination">

        @if (Model.HasPreviousPage)
        {
            <li>
                <a class="page-link" href="?@Model.RouteName=@Model.PreviousPage">PREV</a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" href="?@Model.RouteName=@i">@i</a>
            </li>
        }
        
        @if (Model.HasNextPage)
        {
            <li>
                <a class="page-link" href="?@Model.RouteName=@Model.NextPage">NEXT</a>
            </li>
        }
    </ul>
</nav>